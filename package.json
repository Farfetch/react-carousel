{
  "name": "@farfetch/react-carousel",
  "version": "1.3.1",
  "description": "A carousel component, with support for Swipe, Scroll and Snap Points",
  "license": "MIT",
  "keywords": [
    "react",
    "carousel",
    "responsive",
    "component"
  ],
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "source": "./src/index.js",
  "files": [
    "lib",
    "es",
    "styles.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Farfetch/react-carousel.git"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.js && eslint tests/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix && eslint tests/**/*.js  --fix",
    "clean": "rimraf lib && rimraf es",
    "build": "npm run clean && npm run build:cjs && npm run build:es",
    "build:cjs": "babel src --out-dir lib --env-name cjs --copy-files",
    "build:es": "babel src --out-dir es --env-name es --copy-files",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(src/**/|tests/**/)*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "fast-memoize": "^2.5.1",
    "lodash": "^4.17.10",
    "prop-types": "^15.5.8",
    "react-swipe-events": "^1.0.3",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@commitlint/config-conventional": "^9.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitlint": "^8.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^9.2.5",
    "prettier": "^2.0.5",
    "react": "^16.9.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^15.6.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3"
  }
}
